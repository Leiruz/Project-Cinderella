@page
@using Microsoft.Extensions.Configuration
@model LoginModel
@inject IConfiguration configuration
@{
    ViewData["Title"] = "Log in";
}


<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="col-lg-12" style="margin-left:33%;">
    <div class="row">
        <div class="col-md-4">
            <section id="login-page">
                <form id="account" method="post">
                    <h4>Use a local account to login.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <form method="post">
                        <div class="g-recaptcha" data-sitekey="@configuration["reCAPTCHA:SiteKey"]"></div>
                        <button type="submit" class="btn btn-primary" style="margin-left:35%; margin-top:10%; margin-bottom:5%;">Submit</button>

                    </form>

                    <div class="form-group" id="forget-pass">
                        <p>
                            <a style="color:white;text-align:center;display:block;text-decoration:none;" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a style="color:white;text-align:center;display:block;text-decoration:none;" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}
