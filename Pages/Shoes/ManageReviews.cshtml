@page
@model Cinderella.Pages.Shoes.ManageReviewsModel
@{
    ViewData["Title"] = "ManageReviews";
}

<h1>ManageReviews</h1>
<dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Review</th>
                <th></th>
            </tr>
            @foreach (var reviews in Model.Reviews)
            { 
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => reviews.ReviewName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => reviews.ReviewWords)
                    </td>
                    <td>
                        @if (Model.deleteable)
                        {
                            <form method="POST">
                                <input type="hidden" value="@reviews.ReviewID" name="reviewId" />
                                <input type="hidden" value="@reviews.ShoeID" name="shoeId" />
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary" />
                                </div>
                            </form>
                        }
                    </td>
                </tr>
            }
        </table>
    </dd>
