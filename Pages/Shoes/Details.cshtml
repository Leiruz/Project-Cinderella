@page "{id:int?}"
@model Cinderella.Pages.Shoes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Shoe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shoe.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shoe.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shoe.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Html.DisplayFor(model => model.Shoe.Image)" width="500" alt="@Html.DisplayFor(model => model.Shoe.Image)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shoe.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shoe.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shoe.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shoe.Price)
        </dd>
    </dl>
</div>
<br />
<div class="text-center">
    @if (Model.Reviewable)
    {
        <a asp-page="../Reviews/GiveReview" asp-route-id="@Model.Shoe.ShoeID" class="btn btn-primary" style="margin-bottom:20px;">Give Review</a>
    }
</div>
<br />
<dd class="col-sm-10">
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Review</th>
        </tr>
        @foreach (var reviews in Model.Reviews)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => reviews.ReviewName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => reviews.ReviewWords)
                </td>
            </tr>
        }
    </table>
</dd>
<div class="text-center">
    <a asp-page="../Payment/CheckOut" asp-route-id="@Model.Shoe.ShoeID" class="btn btn-primary" style="padding-right:10px;">Buy Now</a> |
    <a asp-page="./Index" class="btn btn-primary" style="padding-left:10px;">Back to List</a>
    <br />
    <br />
    @if (Model.isAuth) 
    { 
        <a asp-page="../Reviews/ManageReviews"asp-route-id="@Model.Shoe.ShoeID" class="btn btn-primary" style="padding-left:10px;">Manage Reviews</a>
    }
</div>
